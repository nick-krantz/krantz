{
  "private": true,
  "name": "krantz.app",
  "description": "Personal website built with React/Remix",
  "license": "",
  "scripts": {
    "build": "yarn build:css && remix build",
    "build:css": "tailwindcss -i ./app/styles/global.css -o ./app/tailwind.css --minify",
    "dev": "concurrently \"yarn dev:css\" \"node -r dotenv/config ./node_modules/@remix-run/dev/cli.js\"",
    "dev:css": "tailwindcss -i ./app/styles/global.css -o ./app/tailwind.css --watch",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --quiet --fix",
    "postinstall": "remix setup node",
    "start": "remix-serve build",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@remix-run/react": "^1.3.4",
    "@remix-run/serve": "^1.3.4",
    "@remix-run/vercel": "^1.3.4",
    "@supabase/supabase-js": "^1.29.1",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@vercel/node": "^1.14.0",
    "cheerio": "^1.0.0-rc.10",
    "framer-motion": "^6.2.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-icons": "^4.3.1",
    "remix": "^1.3.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.3.4",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.1.4",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.12",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ]
  },
  "sideEffects": false
}
