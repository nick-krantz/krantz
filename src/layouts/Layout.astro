---
import "./src/styles/global.css";

type Props = {
  /**
   * The title of the page, used for the document title and meta tags.
   * @default "Nick Krantz"
   */
  title?: string;
};

const { title = "Nick Krantz" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <title>{title}</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta
      name="theme-color"
      content="#1f2937"
      media="(prefers-color-scheme: dark)"
    />
    <meta
      name="theme-color"
      content="#e5e7eb"
      media="(prefers-color-scheme: light)"
    />
    <meta name="url" content="https://www.krantz.app" />
    <meta name="type" content="website" />
    <meta name="image" content="https://www.krantz.app/og-image.png" />
    <meta name="og:type" content="website" />
    <meta name="og:image" content="https://www.krantz.app/og-image.png" />
    <meta name="og:image:height" content="630" />
    <meta name="og:image:width" content="1200" />
    <meta name="twitter:card" content="app" />
    <meta name="twitter:site" content="@nick__krantz" />
    <meta name="twitter:creator" content="@nick__krantz" />
    <meta name="twitter:image" content="https://www.krantz.app/og-image.png" />
    <link
      rel="icon"
      href="/favicon.ico"
      media="(prefers-color-scheme: no-preference)"
    />
    <link rel="icon" href="/favicon.ico" media="(prefers-color-scheme: dark)" />
    <link
      rel="icon"
      href="/favicon-light.ico"
      media="(prefers-color-scheme: light)"
    />
    <link
      rel="icon"
      href="/favicon.ico"
      media="(prefers-color-scheme: no-preference)"
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
