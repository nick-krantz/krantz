---
import type { Recipe } from "../../supabase/types";
import RecipeCard from "../RecipeCard/RecipeCard.astro";

type Props = {
  recipes: Recipe[];
};

const { recipes } = Astro.props;
---

<ul
  class:list={[
    "grid grid-cols-1 auto-rows-[1fr] md:grid-cols-2 lg:grid-cols-3",
    "gap-4 sm:gap-8 max-w-screen-2xl mx-auto py-4",
  ]}
  aria-label="Recipe List"
>
  {
    recipes.map((recipe) => (
      <li>
        <RecipeCard recipe={recipe} />
      </li>
    ))
  }
</ul>
